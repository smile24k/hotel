Page{
  height: 100%;
}
.index-page{
  height: 100%;
  background-color: #f8f8f8;
  padding-bottom: 15px;
}
.index-page .cates{
  
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  background-color: #fff;
  padding-bottom: 20px;

}

.index-page .cates .list{

  text-align: center;
  width: 20%;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  display: flex;
  margin-top: 20px;
}
.index-page .cates .list .round{
  height: 64px;
  line-height: 64px;
  color: #333;
  width: 64px;
  background-color: #F6CB47;
  border-radius: 50%;
  font-weight: 500;
  font-size: 24px;
  padding: 0;
}
.index-page .cates .list text{
  font-size: 12px;
  color: #666;
  margin-top: 8px;
}

swiper{

  height:180px;
}
.swiper-img{
  height: 180px;
  width: 100%;
  
}

.header{
  position: relative;
}
.inp-line{
  width: 100%;
  padding: 0 20px;
  top: 15px;
  position: absolute;
  display: flex;
  z-index: 1000;
  box-sizing: border-box;
}
input{
  border-radius: 27px;
  line-height: 40px;
  height: 40px;
  flex: 1;
  background-color: #fff;
  padding: 0 15px;
}
.news{
  margin-top: 30rpx;
}
.news .news-list{
  background-color: #fff;
  padding: 20px 12px;
  border-bottom: 1rpx solid #ddd;
  align-items: flex-start;
  
}
.news .news-list:last-of-type{
  border-bottom: none;
}
.news .news-list image{
  width:200rpx;
  height: 200rpx;
  margin-right: 12px;
  background-color: #ddd;
  flex-shrink: 0;

}
.news .news-list .right{
  flex:1;
}
.news .news-list .right .title{
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 16px;
  font-weight: 600;
  color:#000;
}
.news .news-list .right .desc text{
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: #999;
}

.scroll-wrap{
  margin-top: 30rpx;

  padding: 20rpx 0;
  background-color: #fff;
}
.scroll-wrap .scoll-top{
  padding: 20rpx;
  color: #333;
  display: flex;
}
.scoll-top .m-right{
  margin-left: auto;
  color: pink;
}
.scroll-lists{
  display: flex;
  white-space: nowrap;
  box-sizing: border-box;
  
}
.scroll-lists .scroll-list{
  display: inline-block;
  width: 200rpx;
  margin-left: 30rpx;

}
.scroll-lists .scroll-list image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 6px;
}
.scroll-lists .scroll-list .text{
  display: inline-block;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #666;
  text-align: center;

}
.add-btn{
  display: inline-block;
  top: -100rpx;
  position: relative;
  left: 30rpx;
  padding-right: 30rpx;
  color: pink;
}