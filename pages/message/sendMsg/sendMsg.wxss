/* pages/message/sendMsg/sendMsg.wxss */
page{
  height: 100%;
}
.send-msg{
  padding: 20rpx;
  height: calc(100% - 140rpx);
}
textarea {
  border: 1rpx solid #ddd;
  border-radius: 12rpx;
  height: 300rpx;
  padding: 12rpx;
  text-indent: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.btn{
  background-color: #333;
  width: 700rpx !important;
  padding-left: 0;
  padding-right: 0;
  margin: 0;
  border: none;
  font-weight: normal;
  color: #fff;
}