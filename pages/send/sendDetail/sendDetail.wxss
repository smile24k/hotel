/* pages/send/send.wxss */
page{
  height: 100%;
}
.send-page{
  height: 100%;
}
.send-page .header{
  
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #ddd;
  background-color: #fff;
}
.send-page .header .list{
  width: 33.33%;
  text-align: center;
  color: #666;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  justify-content: center;
}
.arrow-down{

}
.arrow-down::before{
  content: "";
  display: inline-block;
  height: 8px;
  width: 8px;
  border-right: 1rpx solid #666;
  border-bottom: 1rpx solid #666;
  transform: rotate(45deg);
  left: 5px;
  position: relative;
  top: -5px;
}


.tab{
  height: 96rpx;
  line-height: 96rpx;
  background-color: #f8f8f8;
}
.tab .scroll-list{
  margin-left: 20px;
  color: #666;
}
.tab .scroll-list.active{
  color: #000;
}

.content{
  height: calc(100% - 100rpx);
}
.send-list{

  padding: 15px;
}

.send-top{
  color: #5C6376;
}
.send-list .send-top .right{
  margin-left: auto;
  color: #5F738C;
}

.send-list .send-top image{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background-color: #f8f8f8;
  margin-right: 10px;
}
.tags{
  margin-top: 15px;
}

.tags .tag{
  background-color: inherit;
  border-radius: 6px;
  padding: 2px 8px;
  margin-left: 0;
  margin-right: 15px;
  color: #6499CB;
  border-color: #6499CB;
  margin-bottom: 0;
}
.tags .tag:nth-child(2n+2){
  color: #96CB95;
  border-color: #96CB95;

}
.desc{
  margin-top: 10px;
}

.images{
  margin-top: 10px;
}
.images image{
  width: 222rpx;
  height: 222rpx;
  margin-right: 10rpx;
}
.images image:nth-child(3n+3){
  margin-right: 0;
}
.center{
  padding: 20px;
  color: #999;
  text-align: center;
}
.share-btn{
  padding:0 !important;
  width: auto !important;
  margin: 0  !important;
  height: auto !important;
  border: none !important;
  line-height: 48rpx !important;
  height: 48rpx !important;
  min-height: 0 !important;
}
.action{

  margin-top: 30rpx;
}
.action .w32{
  width: 48rpx;
  height: 48rpx;
  margin-right: 30rpx;
}
.zan-text{
  color:#999;

}
.cover{
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  right: 40rpx;
  bottom: 100rpx;
}
.cover .c-image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.text-area{
  padding: 24rpx;
}
.text-area textarea{
  
  background-color: #f2f2f2;
  border-radius: 12rpx;
  height: 100rpx;
  padding: 12rpx;
  box-sizing: border-box;
}