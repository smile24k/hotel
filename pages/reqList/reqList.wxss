/* pages/reqList/reqList.wxss */
page{
  height: 100%;
  background-color: #f5f5f5;

}
.reqs{
  height: 100%;
  justify-content: flex-start;
}
.scoll{
  height: 100%;
  align-items: flex-start;
}
.cate{
  width: 200rpx;
  height: 100%;
  background-color: #fff;
  flex-shrink: 0;
}
.cate .list{
  height: 96rpx;
  line-height: 48rpx;
  padding: 24rpx;
  text-align: center;
  border-bottom: 1rpx solid #eee;
  box-sizing: border-box;
}
.cate .list.active{
  background-color: #f2f2f2;
}


.news{
  height: 100%;
  flex: 1;
}
.news .news-list{
  padding: 20px 12px;
  border-bottom: 1rpx solid #ddd;
  align-items: flex-start;
  box-sizing: border-box;
  
}
.news .news-list:last-of-type{
  border-bottom: none;
}
.news .news-list image{
  width:160rpx;
  height: 160rpx;
  margin-right: 12px;
  background-color: #ddd;
  flex-shrink: 0;

}
.news .news-list .right{
  flex:1;
}
.news .news-list .right .title{
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 16px;
  font-weight: 600;
  color:#000;
}
.news .news-list .right .desc text{
  display: inline-block;
  width: 340rpx;
  white-space: normal;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: #999;
}