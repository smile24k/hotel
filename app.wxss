@import './components/weui-wxss/dist/style/weui.wxss';

.tag{
  border: 1px solid #ddd;
  text-align: center;
  border-radius: 15px;
  padding: 5px 15px;
  font-size: 14px;
  margin-left: 13px;
  display: inline-block;
  margin-bottom: 10px;
  background-color: #f8f8f8;
}
.flex{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.fixed-bottom-btn{
  position: fixed;
  width: 100%;
  border: none;

  left: 0;  
  bottom: 0;

}
.mask{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, .3);
  z-index: 100;
}